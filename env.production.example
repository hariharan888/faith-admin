# Faith Church Admin - Production Environment Variables
# Copy this file to .env.production and fill in your values
# Note: All NEXT_PUBLIC_ variables are exposed to the browser

# ============================================
# Deployment Configuration
# ============================================

# Server where the static files will be deployed
DEPLOY_SERVER_IP=your.server.ip.address
DEPLOY_SERVER_USER=ubuntu
DEPLOY_SERVER_PATH=/home/ubuntu/sites/faith-admin

# Domain for this frontend (used for kamal-proxy SSL)
# This domain will be automatically registered with kamal-proxy for SSL
DEPLOY_DOMAIN=admin.faithcitychurch.net

# Optional: Nginx container settings (defaults shown)
# DEPLOY_NGINX_PORT=8080
# DEPLOY_NGINX_CONTAINER=faith-admin-nginx

# URL for health check after deployment
DEPLOY_HEALTH_CHECK_URL=https://admin.faithcitychurch.net

# ============================================
# API Configuration
# ============================================

# Backend API URL (church-api)
NEXT_PUBLIC_API_BASE_URL=https://church-api.technovert.in

# Product Key (obtained from church-api backend)
# This identifies the frontend to the backend
# Get this from running: rails db:seed (check output for Admin API Key)
NEXT_PUBLIC_PRODUCT_KEY=your_admin_product_key_here

# ============================================
# App Configuration
# ============================================

# Public URL of this frontend
NEXT_PUBLIC_APP_URL=https://admin.faithcitychurch.net

# App name displayed in UI
NEXT_PUBLIC_APP_NAME=Faith Church Admin

# Debug mode (set to false in production)
NEXT_PUBLIC_DEBUG_MODE=false

# ============================================
# Organization Configuration
# ============================================

# Organization name displayed in UI
NEXT_PUBLIC_ORG_NAME=Faith City Church

# Organization website
NEXT_PUBLIC_ORG_WEBSITE=https://faithcitychurch.net

